<div class="card-section section-with-photo clickable" {{action 'display_tweet' id bubbles=false}}>

  <div class="section-photo">
    {{#link-to 'user' author}}
      {{unbound user_picture author}}
    {{/link-to}}
  </div>

  <span class="title">
    {{#link-to 'user' author}}
      {{unbound pretty_username author display_name}}
    {{/link-to}}
  </span>

  {{unbound pretty_timestamp timestamp}}

  <div class="body">
    <div class="body-section">
      {{{unbound text}}}
    </div>
    <div class="body-section photos">
      {{#if photo}}
        {{render 'photo_mini' photo }}
      {{/if}}
    </div>
  </div>
  <div class="controls">
    <div>
      {{likes_string}}
    </div>
    <div>
      <button {{action 'unlike' model bubbles=false}} {{bind-attr class="unlikeable::hidden :btn-link"}}>Unmeow</button>
      <button {{action 'like' model bubbles=false}} {{bind-attr class="likeable::hidden :btn-link"}}>Meow</button>
      <button {{action 'edit' id bubbles=false}} {{bind-attr class="editable::hidden :btn-link"}}>Edit</button>
      <button {{action 'display_tweet' id bubbles=false}} {{bind-attr class="logged_in::hidden :btn-link"}}>Reply</button>
      <button {{action 'view_parent' model bubbles=false}} {{bind-attr class="show_parent::hidden :btn-link"}}>Original Tweet</button>
      <Button {{action 'delete' id bubbles=false}} {{bind-attr class="deleteable::hidden :btn-link"}}>Delete</button>
    </div>
  </div>
</div>
